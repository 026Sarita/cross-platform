<UI>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
        #บน
            Spinner:
                id:spin_lang
                text: "please select"
                values:("python","php","html","sal")
                size_hint:(0.4,0.2)
                #pos_hint: {'x': 0.2,'y': 0.85}
                pos_hint: {'top' : 1}
            Label:
                id:ldl_output
                text: "you selected : {} ".format(spin_lang.text)
                
        BoxLayout:
        #ล่าง
            orientation: "horizontal"
            Label:
                text: 'add item'
            TextInput:
                id: txt_input
            Button:
                id: btn_additem
                text: "add item"
                on_press: root.add_item()

                
        

